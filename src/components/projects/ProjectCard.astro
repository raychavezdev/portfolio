---
import Tag from './Tag.astro'
import Eye from '../../icons/Eye.astro'
import Github from '../../icons/Github.astro'

const { title, description, img, tags } = Astro.props
const arrayTags = tags.split(' ')
---

<article
  class="group relative cursor-pointer rounded-lg bg-zinc-300 bg-gradient-to-br from-zinc-300 to-zinc-200 p-4 text-gray-950 shadow-sm shadow-gray-900 dark:bg-zinc-800 dark:bg-gradient-to-br dark:from-zinc-800 dark:to-zinc-900/50 dark:text-gray-200"
>
  <img
    class="rounded-lg shadow-sm shadow-gray-900"
    src={img}
    alt=`Screenshot del proyecto ${title}`
  />
  <h3 class="mb-2 mt-3 text-xl font-semibold">
    {title}
  </h3>
  <div class="mb-3 flex gap-1">
    {arrayTags.map((tag: string) => <Tag text={tag} />)}
  </div>
  <p class="text-clampDes">
    {description}
  </p>

  <div
    class="absolute left-0 top-0 flex h-full w-full items-center justify-center gap-6 rounded-lg bg-zinc-900/50 opacity-0 transition-opacity duration-500 group-hover:opacity-100 dark:bg-zinc-900/80"
  >
    <a
      href="#"
      class="flex h-14 w-40 items-center justify-center gap-2 rounded-lg bg-blue-400 px-4 py-2 transition-colors hover:bg-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 lg:w-32 xl:w-40"
    >
      <Eye />Ver</a
    >
    <a
      href="#"
      class="flex h-14 w-40 items-center justify-center gap-2 rounded-lg bg-slate-300 px-4 py-2 transition-colors hover:bg-slate-200 dark:bg-slate-700 dark:hover:bg-slate-800 lg:w-32 xl:w-40"
    >
      <Github w="25" h="25" />Github</a
    >
  </div>
</article>
